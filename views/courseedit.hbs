<h1>Edit {{course.title}}</h1>
<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
          <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
          <label for="title">Name of course</label>
          <span class="helper-text" data-error="input name" data-success="right"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required value="{{course.price}}">
        <label for="price">Price of course</label>
        <span class="helper-text" data-error="input price" data-success="right"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">URL pictures</label>
        <span class="helper-text" data-error="input url" data-success="right"></span>
    </div>
    <input type="hidden" name="id" value="{{course._id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary" type="submit">Edit course</button>
   
</form> 
<form action="/courses/remove" method="POST">
        <input type="hidden" name="id" value="{{course._id}}">
         <input type="hidden" name="_csrf" value="{{csrf}}">
        {{!-- <span>Id : {{course._id}}</span> --}}
        <button class="btn red" type="submit">Delete course</button>    
    </form>